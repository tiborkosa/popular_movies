<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/lv_movie_trailer_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bottom_light"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_movie_trailer_item"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="150dp"
        android:background="@drawable/ic_baseline_play_arrow_24px"
        android:contentDescription="@string/trailer_img_poster" />
    <TextView
        android:id="@+id/tv_movie_trailer_name"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingLeft="50dp"
        android:paddingRight="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="50dp"
        android:paddingEnd="8dp" />

</LinearLayout>
